generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model Video {
  id           String   @id @default(cuid())
  userId       String   // Clerk User ID
  
  // --- Input Details ---
  publicId     String   // Cloudinary Video ID (e.g. "pixelate-uploads/abc...")
  originalName String   // "Keynote_2024.mp4"
  originalUrl  String   // The full Cloudinary secure_url
  duration     Float    // In seconds
  
  // --- AI Intelligence Layer ---
  transcript   String?  @db.Text // Output from Whisper
  
  // Stores the generated Twitter thread, LinkedIn post, etc.
  // Structure: { twitter: [], linkedin: "", instagram: "", youtube: "" }
  socialData   Json?    
  
  // --- Processing Status ---
  // "processing" | "completed" | "failed"
  status       String   @default("processing") 

  // --- Relations ---
  frames       ProcessedFrame[] // Thumbnails extracted by AI

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
}

model ProcessedFrame {
  id        String   @id @default(cuid())
  userId    String
  
  // Relationship to Parent Video
  videoId   String
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  // Cloudinary Image Info
  publicId  String   @unique
  imageUrl  String   
  
  // AI Scoring (How good is this frame?)
  score     Float    

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([videoId])
}