generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 
// Connection URL is read from environment during CLI operations
// keep DATABASE_URL in project root .env
// Example: DATABASE_URL="postgresql://user:pass@host:5432/dbname"

model Video {
  id             String   @id @default(cuid())
  userId         String   // From Clerk
  
  // File Info
  publicId       String   // Cloudinary Video ID
  originalName   String
  duration       Float
  originalUrl    String   // The video URL
  
  // AI Generated Data
  transcript     String?  @db.Text
  socialData     Json?    // { twitter: [], linkedin: "", instagram: "" }
  
  status         String   @default("processing") // processing | completed | failed

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  frames         ProcessedFrame[]
}

model ProcessedFrame {
  id        String   @id @default(cuid())
  userId    String
  
  videoId   String?
  video     Video?   @relation(fields: [videoId], references: [id], onDelete: Cascade)

  imageUrl  String   // The Cloudinary URL for the thumbnail
  publicId  String   @unique
  score     Float    // How "good" the frame is
  
  createdAt DateTime @default(now())

  @@index([userId])
}