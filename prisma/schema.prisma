generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model Video {
  id           String   @id @default(cuid())
  userId       String   // Clerk User ID
  
  // --- Input Details ---
  publicId     String   // Cloudinary Video ID
  originalName String   // "Keynote_2024.mp4"
  originalUrl  String   // Full Secure URL
  duration     Float    // In seconds
  
  title        String   @default("Untitled Video")
  description  String?  @db.Text 

  // --- AI Intelligence Layer ---
  transcript   String?  @db.Text 
  socialData   Json?    
  
  // --- Processing Status ---
  status       String   @default("processing") 

  // --- Relations ---
  frames       ProcessedFrame[] 

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
}

model ProcessedFrame {
  id        String   @id @default(cuid())
  userId    String
  
  // Relationship to Parent Video
  videoId   String
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  // Cloudinary Image Info
  publicId  String   @unique
  imageUrl  String   
  
  // AI Scoring (How good is this frame?)
  score     Float    

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([videoId])
}